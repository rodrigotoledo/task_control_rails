<div class="mx-auto w-full">
  <h1 class="font-bold text-4xl">Editing project</h1>

  <%= render "form", project: @project %>

  <%= link_to "Back to projects", projects_path, class: "rounded-lg py-3 ml-2 px-5 bg-blue-400 inline-block font-medium text-white" %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy this project", project_path(@project), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-800 text-white font-medium", form: { data: { turbo_confirm: 'Are you sure?' } } %>
  </div>
</div>
