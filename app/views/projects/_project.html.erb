<%= turbo_stream_from project %>
<div id="<%= dom_id project %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= project.title %>
  </p>

  <p class="my-5">
    <% if project.feature_image.attached? %>
      <%= image_tag project.feature_image.variant(resize_to_limit: [100, 100]) %>
    <% else %>
      <p>No image available</p>
    <% end %>
  </p>


  <p class="my-5">
    <strong class="block font-medium mb-1">Completed at:</strong>
    <%= l(project.completed_at, format: :long) unless project.completed_at.blank? %>
  </p>

  <div class="flex space-x-2">
    <%= link_to "Edit this project", edit_project_path(project), class: "rounded-lg py-3 px-5 bg-blue-400 inline-block font-medium text-white" %>
    <%= button_to "Destroy this project", project_path(project), method: :delete, class: "rounded-lg py-3 px-5 bg-red-800 text-white font-medium", form: { data: { turbo_confirm: 'Are you sure?' } } %>
  </div>
  <hr class="mt-6">
</div>
