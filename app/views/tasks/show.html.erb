<div class="mx-auto w-full">
  <%= turbo_stream_from dom_id(@task) %>
  <%= render @task %>

  <%= link_to "Edit this task", edit_task_path(@task), class: "mt-2 rounded-lg py-3 ml-2 px-5 bg-blue-400 inline-block font-medium text-white" %>
  <%= link_to "Back to tasks", tasks_path, class: "ml-2 rounded-lg py-3 ml-2 px-5 bg-blue-400 inline-block font-medium text-white" %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy this task", task_path(@task), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium", form: { data: { turbo_confirm: 'Are you sure?' } } %>
  </div>
</div>
